generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model utilisateur {
  id             String    @id @default(cuid())
  nom            String
  nomUtilisateur String
  email          String    @unique
  motDePasse     String
  role           Json      @default("[\"ROLE_USER\"]")
  contact        String
  addresse       String
  ville          String
  produits       produit[]

  @@map("utilisateurs")
}

model categorie {
  id          String    @id @default(cuid())
  nom         String    @db.VarChar(45)
  description String    @db.VarChar(45)
  image       String    @unique @db.VarChar(100)
  produits    produit[]
  created_at  DateTime  @default(now()) @db.DateTime(0)
  updated_at  DateTime?

  @@map("categories")
}

model produit {
  id             String      @id @default(cuid())
  nom            String      @db.VarChar(35)
  description    String      @db.VarChar(255)
  prix           Decimal?
  statut         Json?
  utilisateur    utilisateur @relation(fields: [utilisateur_id], references: [id])
  utilisateur_id String
  categorie      categorie   @relation(fields: [categorie_id], references: [id])
  categorie_id   String
  images         images[]
  created_at     DateTime    @default(now()) @db.DateTime(0)
  updated_at     DateTime?

  @@map("produits")
}

model images {
  id         String    @id @default(cuid())
  imageUrl   String    @db.VarChar(100)
  imageName  String    @db.VarChar(255)
  produit    produit   @relation(fields: [produit_id], references: [id])
  produit_id String
  created_at DateTime  @default(now()) @db.DateTime(0)
  updated_at DateTime?
}
